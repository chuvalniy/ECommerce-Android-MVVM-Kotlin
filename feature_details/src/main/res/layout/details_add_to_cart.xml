<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnAddToCart"
    android:layout_width="match_parent"
    android:layout_height="@dimen/btn_add_to_cart_height"
    android:layout_marginHorizontal="@dimen/btn_add_to_cart_horizontal_margin"
    android:layout_marginTop="@dimen/btn_add_to_cart_top_margin"
    android:background="@drawable/background_rounded_ripple_orange"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/tvAddToCart"
        style="@style/HeadlineBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center"
        android:layout_marginStart="@dimen/btn_add_to_cart_content_margin_horizontal"
        android:text="@string/add_to_cart"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/tvProductPrice"
        style="@style/HeadlineBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginEnd="@dimen/btn_add_to_cart_content_margin_horizontal" />
</FrameLayout>

