<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header2">
        <item name="android:fontFamily">@font/mavenpro_bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/mavenpro_medium</item>
    </style>


    <style name="Subtitle1">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Subtitle2">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HeadlineBold">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mavenpro_bold</item>
    </style>

    <style name="Helper3">
        <item name="android:fontFamily">@font/mavenpro_regular</item>
        <item name="android:textColor">@color/gray_helper</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HelperTextMedium2">
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textColor">@color/gray_helper</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>

    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">30dp</item>
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textColorHint">@color/gray_helper</item>
        <item name="android:editTextColor">@color/gray_helper</item>
        <item name="android:textSize">20sp</item>
        <item name="colorControlActivated">@color/gray_helper</item>
    </style>

    <style name="BestSellerDiscountPrice">
        <item name="android:fontFamily">@font/mavenpro_bold</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BestSellerDefaultPrice">
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BestSellerTitle">
        <item name="android:fontFamily">@font/mavenpro_regular</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconTint">@color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
    </style>


    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/mavenpro_regular</item>
    </style>
</resources>