<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/mavenpro_medium</item>
    </style>
    
    <style name="Subtitle1">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Subtitle2">
        <item name="android:textColor">@color/dark_blue</item>
        <item name="android:fontFamily">@font/mavenpro_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CaptionRegular">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray_caption</item>
        <item name="android:fontFamily">@font/mavenpro_regular</item>
    </style>

    <style name="HeadlineBold">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/mavenpro_bold</item>
    </style>

    <style name="CapacityRadioTextStyle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@drawable/selector_radio_button</item>
        <item name="android:fontFamily">@font/mavenpro_bold</item>
    </style>

    <style name="CategoriesTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/dark_blue</item>
        <item name="tabIndicatorHeight">4dp</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/mavenpro_regular</item>
        <item name="android:textColor">@color/gray_capacity</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>