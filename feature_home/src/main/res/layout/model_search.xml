<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cvSearch"
        android:layout_width="0dp"
        android:layout_height="@dimen/search_view_height"
        android:layout_marginVertical="@dimen/search_tab_top_margin"
        android:layout_marginStart="@dimen/search_tab_horizontal_margin"
        android:layout_marginEnd="@dimen/search_view_margin_end"
        android:layout_weight="1"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="17dp"
        app:cardElevation="@dimen/category_card_elevation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="12dp"
            android:fontFamily="@font/mavenpro_regular"
            android:gravity="center_vertical"
            android:text="@string/search"
            android:textColor="@color/gray_helper"
            android:textSize="14sp"
            tools:ignore="TextContrastCheck" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnQrCode"
        app:cardCornerRadius="10000dp"
        android:layout_width="@dimen/main_screen_qr_code_button_size"
        android:layout_height="@dimen/main_screen_qr_code_button_size"
        app:cardBackgroundColor="@color/light_orange"
        android:layout_marginVertical="@dimen/search_tab_top_margin"
        android:layout_marginEnd="@dimen/search_tab_horizontal_margin"
        app:cardElevation="@dimen/category_card_elevation"
        tools:ignore="TouchTargetSizeCheck">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/qr_code"
            android:layout_gravity="center"
            android:src="@drawable/ic_qr_code"/>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>

